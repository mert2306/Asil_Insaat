@model YaziEklemeViewModel



<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Yazı Yönetimi /</span> Yazı Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Yazi</h5>
                <div class="card-body">
                    <form asp-controller="Yazi" asp-action="Ekle" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <a class="btn btn-dark float-end" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
                                Kategori Ekle <i class="bx bx-plus"></i>
                            </a>
                            <br />
                            <label asp-for="KategoriId">KATEGORİ</label>
                            <br />

                            <select id="kategoriList" class="form-control" asp-for="KategoriId" asp-items="@(new SelectList(Model.Kategoris, "Id","Isim" ))"></select>
                            <span asp-validation-for="KategoriId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <br />
                            <label asp-for="Fotograf" class="form-label">FOTOĞRAF SEÇİNİZ</label>

                            <input asp-for="Fotograf" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp" required="Boş Geçilmez!">
                            <span asp-validation-for="Fotograf" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Baslik" id=" defaultFormControlInput" class="form-label">BAŞLIK</label>
                            <input asp-for="Baslik" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp" required="Boş Geçilmez!">
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Fiyat" id=" defaultFormControlInput" class="form-label">Fiyat</label>
                            <input asp-for="Fiyat" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp" required="Boş Geçilmez!">
                            <span asp-validation-for="Fiyat" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Dosya" id=" defaultFormControlInput" class="form-label">Dosya</label>
                            <input asp-for="Dosya" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp" required="Boş Geçilmez!">
                            <span asp-validation-for="Dosya" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgiİcerik1" id=" defaultFormControlInput" class="form-label">Bilgi Adı</label>
                            <input asp-for="Bilgiİcerik1" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Bilgi İçeriği" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgiİcerik1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgi1" id=" defaultFormControlInput" class="form-label">Blgi 1</label>
                            <input asp-for="Bilgi1" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgi1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgiİcerik2" id=" defaultFormControlInput" class="form-label">Bilgi Adı</label>
                            <input asp-for="Bilgiİcerik2" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Bilgi İçeriği" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgiİcerik2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgi2" id=" defaultFormControlInput" class="form-label">bilgi 2</label>
                            <input asp-for="Bilgi2" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgi2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgiİcerik3" id=" defaultFormControlInput" class="form-label">Bilgi Adı</label>
                            <input asp-for="Bilgiİcerik3" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Bilgi İçeriği" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgiİcerik3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgi3" id=" defaultFormControlInput" class="form-label">bilgi 3</label>
                            <input asp-for="Bilgi3" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgi3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgiİcerik4" id=" defaultFormControlInput" class="form-label">Bilgi Adı</label>
                            <input asp-for="Bilgiİcerik4" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Bilgi İçeriği" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgiİcerik4" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgi4" id=" defaultFormControlInput" class="form-label">bilgi 4</label>
                            <input asp-for="Bilgi4" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgi4" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgiİcerik5" id=" defaultFormControlInput" class="form-label">Bilgi Adı</label>
                            <input asp-for="Bilgiİcerik5" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Bilgi İçeriği" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgiİcerik5" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bilgi5" id=" defaultFormControlInput" class="form-label">bilgi 5</label>
                            <input asp-for="Bilgi5" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Bilgi5" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Icerik" for="defaultFormControlInput" class="form-label">İÇERİK</label>
                            <textarea asp-for="Icerik" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:300px" placeholder="Ekle..." aria-describedby="defaultFormControlHelp" required="Boş Geçilmez!"> </textarea>
                            <span asp-validation-for="Icerik" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger btn-dark float-end"> KAYDET </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>



</div>


<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Kategori Ekle</h5>
                <button type="button" class="close btn btn-danger" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
              
                <form>
                    <div class="form-group ">
                        <label class="d-block form-label">KATEGORİ EKLE</label>
                        <input class="form-control " type="text" id="kategoriIsim" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-keyboard="false" class="btn btn-primary" id="btnSave">Değişikliği Kaydet</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script src="~/js/Ekleme.js"> </script>
    <script>

        var app = app || {};
        app.Urls = app.Urls || {};

        app.Urls.baseUrls = '@Url.Content("~")';

        app.Urls.kategoriEkleUrl = "@(Url.Action("AddWithAjax", "Kategori"))";
        app.Urls.yaziEkleUrl = "@(Url.Action("Ekle", "Yazi"))";
    </script>
}