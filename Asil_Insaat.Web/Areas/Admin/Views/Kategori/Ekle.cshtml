@model KategoriEklemeViewModel

<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Kategori Yönetimi /</span> Kategori Ekle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">KATEGORİ</h5>
                <div class="card-body">
                    <form asp-controller="Kategori" asp-action="Ekle" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>


                        <div class="form-group">
                            <label asp-for="Isim" id=" defaultFormControlInput" class="form-label">KATEGORİ İSMİ</label>
                            <input asp-for="Isim" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Isim" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> KAYDET </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>