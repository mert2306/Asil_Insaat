@model List<VideoViewModel>



<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Video Yönetimi /</span> Videolar
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header"></h5>
        <div class="table-responsive text-nowrap m-3">


            <table class="table table-bordered" id="yazisTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Oluşturulma Tarİhİ</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0">
                    @foreach (var video in Model)
                    {
                        <tr name="@video.Id">
                            <td>@video.Baslik</td>
                            <td>@video.OlusturulmaTarihi.ToShortDateString()</td>
                            <td>@(video.SilinmisMi ? "SİLİNMİŞ" : "AKTİF")</td>
                            <td>

                                <a class="btn btn-warning btn-sm" data-id="@video.Id" asp-area="Admin" asp-controller="Video" asp-action="GeriSilme" asp-route-fotografId="@video.Id">
                                    <i class='bx bx-undo'></i>


                                </a>

                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>

</div>


@section Scripts{
    <script src="~/js/yaziIndex.js" type="application/ecmascript"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/web/alertify.min.js" />
 }
