@model OrtakGuncellemeViewModel
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">İş Ortağı Yönetimi /</span> İş Ortağı Güncelle
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">İş Ortağı</h5>

                <form asp-controller="Ortak" asp-action="Guncelle" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Baslik" id="defaultFormControlInput" class="form-label">BAŞLIK</label>
                            <input asp-for="Baslik" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ekle..." aria-describedby="defaultFormControlHelp" required="Boş Geçilmez!">
                            <span asp-validation-for="Baslik" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Baglanti" for="defaultFormControlInput" class="form-label">İÇERİK</label>
                            <textarea asp-for="Baglanti" type="text" class="form-control mb-3" id="defaultFormControlInput"  placeholder="Ekle..." aria-describedby="defaultFormControlHelp"> </textarea>
                            <span asp-validation-for="Baglanti" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="Resim.FileName" for="defaultFormControlInput" class="form-label d-block">Mevcut Resim</label>
                                <img style="height:25em; width:25em;" class="mb-3" src="~/images/@Model.Resim.FileName" alt="@Model.Baslik" />

                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Resim" class="form-label">Fotoğraf Seçiniz</label>
                                <input asp-for="Ortak" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                                <span asp-validation-for="Ortak" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> KAYDET </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

