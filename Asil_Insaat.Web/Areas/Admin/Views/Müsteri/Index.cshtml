@model List<MüsteriViewModel>



<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Müsteri Yönetimi /</span> Müşteriler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header"></h5>
        <div class="table-responsive text-nowrap m-3">



            <a class="btn btn-success mb-5" asp-area="Admin" asp-controller="Müsteri" asp-action="Ekle">
                Müşteri Ekle <i class="bx bx-plus"></i>
            </a>




            <table class="table table-bordered" id="kategorisTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>E-Mail</th>
                        <th>Telefon</th>
                        <th>Adres</th>
                        <th>Şehir</th>
                        <th>Posta Kodu</th>
                        <th>Ödeme Şartı</th>
                        <th>Oluşturulma Tarİhİ</th>
                        <th>Durum</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>

                <tbody class="table-border-bottom-0">
                    @foreach (var müsteri in Model)
                    {
                        <tr name="@müsteri.Id">
                            <td>@müsteri.Isim</td>
                            <td>@müsteri.Email</td>
                            <td>@müsteri.Telefon</td>
                            <td>@müsteri.Adres</td>
                            <td>@müsteri.Sehir</td>
                            <td>@müsteri.PostaKodu</td>
                            <td>@müsteri.OdemeSarti</td>
                            <td>@müsteri.OlusturulmaTarihi.ToShortDateString()</td>
                            <td>@(müsteri.SilinmisMi ? "SİLİNMİŞ" : "AKTİF")</td>

                            <td>


                                <a class="btn btn-primary btn-sm" data-id="@müsteri.Id" asp-area="Admin" asp-controller="Müsteri" asp-action="Guncelle" asp-route-müsteriId="@müsteri.Id">
                                    <i class="bx bxs-edit"></i> GÜNCELLE
                                </a>



                                <a class="btn btn-danger btn-sm" data-id="@müsteri.Id" asp-area="Admin" asp-controller="Müsteri" asp-action="Sil" asp-route-müsteriId="@müsteri.Id" onclick="return confirm('Silmek istediğinden emin misin?')"><i class="bx bx-minus-circle"></i>SİL</a>
                                <script>
                                    function clicked(e) {
                                        if (!confirm('Silmek istediğinden emin misin?')) {
                                            e.preventDefault();
                                        }
                                    }
                                </script>


                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>

</div>


@section Scripts {
    <script src="~/js/KategoriIndex.js type="application/ecmascript"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/web/alertify.min.js" />
}
