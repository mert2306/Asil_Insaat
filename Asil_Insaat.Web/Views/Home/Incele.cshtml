@model YaziViewModel

<div class="slider-area ">
    <div class="single-slider hero-overly slider-height2 d-flex align-items-center" data-background="/Asil/assets/img/hero/h1_hero.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-8">
                    <div class="hero-cap hero-cap2 pt-120">
                        <h2>@Model.Baslik</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Libraries Stylesheet -->
<link href="~/Yeni/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
<link href="~/Yeni/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<!-- Customized Bootstrap Stylesheet -->
<link href="~/Yeni/css/bootstrap.min.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="~/Yeni/css/style.css" rel="stylesheet">

<!-- Single Product Start -->
<div class="container-fluid py-5 mt-5">
    <div class="container py-5">
        <div class="row g-4 mb-5">
            <div class="col-lg-12 col-xl-12">
                <div class="row g-4">
                    <div class="col-lg-6">
                        <div class="border rounded">
                            <a href="~/images/@Model.Resim.FileName" target="_blank">
                                <img src="~/images/@Model.Resim.FileName" class="img-fluid rounded" alt="Image">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h4 class="fw-bold mb-3">@Model.Baslik</h4>
                        <p class="mb-3"><i class="fa-solid fa-list"></i> / @Model.Kategori.Isim</p>
                        <p class="mb-3"> <i class="fa-solid fa-calendar-days"></i> / @Model.OlusturulmaTarihi.ToShortDateString()</p>
                        <a href="@Model.Dosya" target="_blank" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa-solid fa-file"></i> Ürün Teknİk BİLGİ</a>


                        <a asp-controller="Home" asp-action="Iletisim" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa fa-shopping-bag me-2 text-primary"></i> @Model.Fiyat</a>
                        <a href="https://wa.me/+905322251249?text=Merhaba%2C%20%20 @Model.Baslik %20hakk%C4%B1nda%20bilgi%20almak%20istiyorum." target="_blank" class="btn border border-secondary rounded-pill px-4 py-2 mb-4 text-primary"><i class="fa-brands fa-whatsapp"></i>  WhatsApp Üzerİnden İletİşİm</a>
                    </div>
                    <div class="col-lg-12">
                        <nav>
                            <div class="nav nav-tabs mb-3">
                                <button class="nav-link active border-white border-bottom-0" type="button" role="tab"
                                        id="nav-about-tab" data-bs-toggle="tab" data-bs-target="#nav-about"
                                        aria-controls="nav-about" aria-selected="true">
                                    Açıklma
                                </button>

                            </div>
                        </nav>
                        <div class="tab-content mb-5">
                            <div class="tab-pane active" id="nav-about" role="tabpanel" aria-labelledby="nav-about-tab">
                                <p>
                                    <p>
                                        Tanım:
                                    </p>
                                    @Model.Icerik
                                </p>
                               

                                <div class="px-2">
                                    <div class="row g-4">
                                        <div class="col-12">
                                            <div class="row bg-light align-items-center text-center justify-content-center py-2">
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgiİcerik1</p>
                                                </div>
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgi1</p>
                                                </div>
                                            </div>
                                            <div class="row text-center align-items-center justify-content-center py-2">
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgiİcerik2</p>
                                                </div>
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgi2</p>
                                                </div>
                                            </div>
                                            <div class="row bg-light text-center align-items-center justify-content-center py-2">
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgiİcerik3</p>
                                                </div>
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgi3</p>
                                                </div>
                                            </div>
                                            <div class="row text-center align-items-center justify-content-center py-2">
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgiİcerik4</p>
                                                </div>
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgi4</p>
                                                </div>
                                            </div>
                                            <div class="row bg-light text-center align-items-center justify-content-center py-2">
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgiİcerik5</p>
                                                </div>
                                                <div class="col-6">
                                                    <p class="mb-0">@Model.Bilgi5</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h2 class="contact-title">Bize Ulaşın</h2>
                        </div>
                        <div class="col-lg-8">

                            <div class="col-md-12">
                                <div class="contact-form">
                                    <form class="form-contact contact_form" id="contactForm" asp-controller="Home" asp-action="Iletisim" method="post">
                                    </form>
                                </div>
                            </div>

                            <form class="form-contact contact_form" id="contactForm" asp-controller="Home" asp-action="Iletisim" method="post">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <fieldset>
                                                <input class="form-control" name="AdiSoyadi" id="AdiSoyadi" type="text" placeholder="İsİm Soyİsim">
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <fieldset>
                                                <input class="form-control" name="Email" id="Email" type="email" placeholder="E-Posta Adresiniz">
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <fieldset>
                                                <input class="form-control" name="Konu" id="subject" type="text" placeholder="Konu">
                                            </fieldset>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <fieldset>
                                                <textarea class="form-control" name="Mesaj" id="Mesaj" rows="9" placeholder=" @Model.Baslik"></textarea>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mt-3">
                                    <button type="submit" class="button button-contactForm boxed-btn">Gönder</button>
                                </div>
                            </form>
                        </div>
                        <div class="col-lg-3 offset-lg-1">
                            <div class="media contact-info">
                                <span class="contact-info__icon"><i class="ti-home"></i></span>
                                <div class="media-body">
                                    <h3>Elazığ/Merkez</h3>
                                    <p>Sarayatik Mahallesi Adnan Orakçıoğlu Caddesi No:22/A</p>
                                </div>
                            </div>
                            <div class="media contact-info">
                                <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                                <div class="media-body">
                                    <h3><a href="tel:05322251249">0(532) 225 12 49</a></h3>
                                    <p>Telefon</p>
                                </div>
                            </div>
                            <div class="media contact-info">
                                <span class="contact-info__icon"><i class="ti-email"></i></span>
                                <div class="media-body">
                                    <h3><a href="mailto:asilinsaatyapiyalitim@gmail.com">asilinsaatyapiyalitim@gmail.com</a></h3>
                                    <p>E-Posta</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>






















