@model List<KategoriViewModel>



<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Çöp Kutusu /</span> KATEGORİLER
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header"></h5>
        <div class="table-responsive text-nowrap m-3">
            @*
            <a class="btn btn-success mb-5" asp-area="Admin" asp-controller="Category" asp-action="Add">
            Kategori Ekle <i class="bx bx-plus"></i>
            </a> *@
            <table class="table table-bordered" id="kategorisTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturulma Tarİhİ</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0">
                    @foreach (var kategori in Model)
                    {
                        <tr name="@kategori.Id">
                            <td>@kategori.Isim</td>
                            <td>@kategori.OlusturulmaTarihi.ToShortDateString()</td>
                            <td>@(kategori.SilinmisMi ? "SİLİNMİŞ" : "AKTİF")</td>
                            <td>

                                <a class="btn btn-warning btn-sm" data-id="@kategori.Id" asp-area="Admin" asp-controller="Kategori" asp-action="GeriSilme" asp-route-kategoriId="@kategori.Id">
                                    <i class='bx bx-undo'></i>


                                </a>
                                @* <a class="btn btn-danger btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-categoryId="@category.Id" onclick="return confirm('Silmek istediğinden emin misin?')"><i class="bx bx-minus-circle"></i>SİL</a>

                            <script>
                            function clicked(e) {
                            if (!confirm('Silmek istediğinden emin misin?')) {
                            e.preventDefault();
                            }
                            }
                            </script> *@
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>

</div>


@section Scripts{
    <script src="~/js/KategoriIndex.js" type="application/ecmascript"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/web/alertify.min.js" />
 }
