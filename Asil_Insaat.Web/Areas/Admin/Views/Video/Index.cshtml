@model List<VideoViewModel>



<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Video Yönetimi /</span> Videolar
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header"></h5>
        <div class="table-responsive text-nowrap m-3">

            <a class="btn btn-success mb-5" asp-area="Admin" asp-controller="Video" asp-action="Ekle">
                Video Ekle <i class="bx bx-plus"></i>
            </a>


            <table class="table table-bordered" id="yazisTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Oluşturulma Tarİhİ</th>
                        <th>İçerik</th>
                        <th>Durum</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>

                <tbody class="table-border-bottom-0">
                    @foreach (var video
                    in Model)
                    {
                        <tr name="@video.Id">
                            <td>@video.Baslik</td>
                            <td>@video.OlusturulmaTarihi.ToShortDateString()</td>
                            <td>@video.İcerik</td>


                            <td>@(video.SilinmisMi ? "SİLİNMİŞ" : "AKTİF")</td>
                            <td>

                                <a class="btn btn-primary btn-sm" data-id="@video.Id" asp-area="Admin" asp-controller="Video" asp-action="Güncelle" asp-route-videoId="@video.Id">
                                    <i class="bx bxs-edit"></i>

                                    GÜNCELLE

                                </a>
                                <a class="btn btn-danger btn-sm" data-id="@video.Id" asp-area="Admin" asp-controller="Video" asp-action="Sil" asp-route-videoId="@video.Id" onclick="return confirm('Silmek istediğinden emin misin?')"><i class="bx bx-minus-circle"></i>SİL</a>

                                <script>
                                    function clicked(e) {
                                        if (!confirm('Silmek istediğinden emin misin?')) {
                                            e.preventDefault();
                                        }
                                    }
                                </script>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>


@section Scripts{
    <script src="~/js/yaziIndex.js" type="application/ecmascript"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/web/alertify.min.js" />
 }
